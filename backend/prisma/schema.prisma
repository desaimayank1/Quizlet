datasource db {
  provider = "sqlite"
  url      = "file:./quiz.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int          @id @default(autoincrement())
  name    String
  email   String       @unique
  testStatus Boolean
  quiz    Quiz?
}

model Question {
  id            Int      @id @default(autoincrement())
  text          String
  options       String   
  answer        Int
}

model Answer {
  id        Int         @id @default(autoincrement())
  questionId Int
  selectedAns Int
  quizId     Int  
  quiz       Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model Quiz {
  id        Int         @id @default(autoincrement())
  userId    Int         @unique
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers   Answer[]
  score    Int
}